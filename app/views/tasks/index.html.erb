<p style="color: green"><%= notice %></p>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="card mb-3 w-25">
      <div class="card-body">
        <h5 class="card-title"> <%= task.title %> </h5>
        <h6 class="card-title"> <%= task.due_date %> </h6>
        <p class="card-text">Completed by <%= task.done_assignments_count %></p>
        <p class="card-text"><%= task.description %></p>
        <%= link_to "Show", task, class: "btn btn-primary" %>
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-secondary" %>
        <%= button_to "Delete", task, method: :delete, class: "btn btn-outline-danger mt-1" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New task", new_task_path, class:"btn btn-secondary" %>

